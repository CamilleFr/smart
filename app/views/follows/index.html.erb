<div class="gradient">
  <h2 class="text-center">My friends</h2>
  <% @friends.each do | friend |%>
    <div class="message">
      <img class="message-avatar" src="https://kitt.lewagon.com/placeholder/users/camilleFr">
      <div class="message-name">
        <h3><%= friend.username %></h3>
        <p>Score <span class="score-cards next_button_style"><%= friend.surveys.last&.total_user_score %></span></p>
      </div>
      <div class="icons">
        <a onclick="window.open('http://www.facebook.com/sharer.php?u=<%= request.original_url %>','newwindow');return false;">
          <i class="fab fa-facebook"></i>
        </a>
      </div>
    </div>
  <% end %>
</div>

