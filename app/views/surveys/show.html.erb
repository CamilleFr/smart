<div class='gradient'>
    <h1 class='header margin'> Evaluate <br> your <br> eco-impact</h1>
     <p id='pick'>Start with a category!</p>
    <%= link_to user_path(current_user), class:'back' do %>
      <i class="far fa-times-circle"></i>
    <% end %>
    <div class='circle-container'>

      <%= image_tag("earth.png", class:'planet') %>

    <div class='wrapper deg0' >
        <%=  link_to edit_survey_path(@survey, category: 'food') do%>
        <%= image_tag("food.png", class:'progress', data: {percent:10}) %>
      <div id="container_food"></div>
      <% end %>
    </div>

     <div class='wrapper deg90' >
      <%=  link_to edit_survey_path(@survey, category: 'transport') do%>
        <%= image_tag("transport.png") %>
        <div id="container_transport"></div>
      <% end %>
      </div>

      <div class='wrapper deg180' >
      <%=  link_to edit_survey_path(@survey, category: 'waste'), class:'deg180' do%>
        <%= image_tag("trash.png") %>
         <div id="container_trash"></div>
      <% end %>
      </div>

      <div class='wrapper deg270' >
      <%=  link_to edit_survey_path(@survey, category: 'energy'), class:'deg270' do%>
        <%= image_tag("house.png") %>
        <div id="container_housing"></div>
      <% end %>
    </div>

  </div>
    <p> <%#= @survey.energy_score %></p>
</div>

</div>


