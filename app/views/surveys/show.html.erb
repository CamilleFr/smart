<div class='gradient'>
    <p class="header_form pimp ">Start Surveys </p>
    <%= link_to user_path(current_user), class:'button' do %>
      <i class="fas fa-arrow-left arrow"></i>
    <% end %>
  <div class="form-container">
     <!-- <p>Start with a category!</p> -->

    <div class='circle-container'>
      <%#= image_tag("earth.png", class:'planet') %>

      <div class="row space">
        <div class="col-xs-6 ">
          <div class="fixed-image">
          <%= link_to edit_survey_path(@survey, category: 'food') do%>
          <%= image_tag("food.png") %>
          <div id="container_food" data-food="<%= @food.to_json %>"></div>
          <p>Food</p>
          <% end %>
          </div>
        </div>

        <div class="col-xs-6">
          <div class="fixed-image">
            <%=  link_to edit_survey_path(@survey, category: 'transport') do%>
            <%= image_tag("transport.png") %>
          <div id="container_transport" data-transport="<%= @transport.to_json %>"></div>
          <p>Transport</p>
          <% end %>
        </div>
        </div>
      </div>



      <div class="row space">
        <div class="col-xs-6 ">
          <div class="fixed-image">
          <%=  link_to edit_survey_path(@survey, category: 'waste') do%>
          <%= image_tag("trash.png") %>
       <div id="container_trash" data-trash="<%= @trash.to_json %>"></div>
       <p>Waste</p>
      <% end %>
      </div>
        </div>

        <div class="col-xs-6">
          <div class= "fixed-image">
        <%=  link_to edit_survey_path(@survey, category: 'energy'), class:'deg270' do%>
        <%= image_tag("house.png") %>
        <div id="container_housing" data-housing="<%= @housing.to_json %>"></div>
        <p>Energy</p>
        <% end %>
        </div>
        </div>
      </div>



    <p> <%#= @survey.energy_score %></p>
  </div>
</div>


