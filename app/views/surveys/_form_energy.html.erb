    <%= f.input :housing_type, as: :radio_buttons, collection: Survey::TYPE_HOUSE, wrapper: :vertical_collection_inline, label: "Accomodation type?" %>
    <p id="step_1_button" class="next_button_style">Next</p>
  </div>
  <div class="choices hidden" id="step_2">
   <%= f.input :area, as: :radio_buttons, collection: Survey::AREA, wrapper: :vertical_collection_inline, label: "Accomodation surface?" %>
   <p id="step_2_button" class="next_button_style">Next</p>
  </div>
  <div class="choices hidden" id="step_3">
    <%= f.input :heat_type, as: :radio_buttons, collection: Survey::HEAT_TYPE, wrapper: :vertical_collection_inline, label: "Type of heating used?" %>
    <p id="step_3_button" class="next_button_style">Next</p>
  </div>
  <div class="choices hidden" id="step_4">
