<div class="modal fade" id="new_eco_action" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Eco Action</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div style="background-color: white;">
        <div class="modal-body">
          <%= simple_form_for eco_action do |f| %>
          <div class="container-form">
            <h4>Category:</h4>
            <div class="button-icons">
              <% EcoAction::CATEGORIES.each do |category| %>
              <div class="icons-category">
                <%= image_tag "#{category}.png", height: 50, data: {name: category} %>
              </div>

              <% end %>
            </div>

            <%= f.input :eco_category, as: :hidden, label: false %>
            <h4>Title:</h4>
            <%= f.input :title, label: false, placeholder: 'Title' %>

              <h4>Description:</h4>
              <%= f.input :description, label: false, placeholder: 'Description', :input_html => {:style => 'width: 270px'} %>


            <div class="sentence"><p>What is the impact of your Eco Action (yearly basis)?</p></div>
            <div class="impact">
              <%= f.input :eco_impact, label: false, :input_html => {:style => 'width: 100px'} %>

              <%= f.input :eco_scoring_unit, include_blank: false, collection: EcoAction::UNITS, label: false %>
            </div>
            <h4>Add a picture!</h4>
            <label for="eco_action_photo" class="custom-file-upload button">
                 picture
            </label>

            <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden"/>
            <%= f.input :photo, label: false, input_html: { class: "button-photo photo-to-preview" } %>
            <%= f.input :photo_cache, as: :hidden %>

            <input id="eco_action_photo" type="file"/>

            <%= f.button :submit, label:"hello", class: "button btn-primary"%>
            <% end %>
            <p></p>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
