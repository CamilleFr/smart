<div class="gradient">
  <h2 class="text-center">My friends</h2>
  <% @users.each do | user |%>
    <div class="message">
      <img class="message-avatar" src="https://kitt.lewagon.com/placeholder/users/camilleFr">
      <div class="message-name">
        <h3><%= user.username %></h3>
        <p>Score <span class="score-cards next_button_style"><%= user.surveys.last&.total_user_score %></span></p>
      </div>
      <div class="icons">
        <a onclick="window.open('http://www.facebook.com/sharer.php?u=<%= request.original_url %>','newwindow');return false;">
          <i class="fab fa-facebook"></i>
        </a>
        <%= simple_form_for @follow do |f| %>
          <%= f.input :follow, :as => :hidden, input_html: { :value => user.id } %>
          <%= button_tag type: 'submit', class: "" do %>
            <i class="far fa-heart"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

