  <% @users.each do | user |%>

    <div class="message grad">
      <img class="avatar" src="https://kitt.lewagon.com/placeholder/users/camilleFr">
      <div class="message-name">
        <h3><%= user.username %></h3>
        <p><%= Date.today %></p>
      </div>
      <div class="message-body">
        <p><strong>I am not sure yet!</strong></p>

      </div>
