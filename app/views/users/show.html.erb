<div class='gradient'>
  <div class="box" style="padding-top:1em;">
    <div class="box_item"  style="position: absolute;left: 2em;margin-top: 2em;">
        <%= link_to surveys_path, method: :post, class:'footprint' do   %>
      <%= image_tag("footprint.png") %>
      <% end %>
      <p>Get started !</p>
    </div>

    <div class="box_item box_right">
    <p>Eco-actions</p>
      <%= link_to eco_actions_path, class:'solutions' do %>
      <%= image_tag("solutions.png") %>
    <% end %>
    </div>
  </div>

  <div class='box' style="align-items: center;">
    <div style="position:absolute; top:17em; right:55vw;"><%= image_tag "earth.png", class:'planet small' %> </div>
    <h1 id="Welcome">Welcome</h1>
  </div>

  <div class="box">
    <div class="box_item" style="position: absolute;left: 2em;">
      <%= link_to profile_path(current_user), class:'user' do  %>
      <%= image_tag("profile.png") %>
    <% end %>
    <p>My profile</p>
    </div>

    <div class="box_item box_right">
    <p>My results</p>
    <% if @user.surveys.present? %>
      <% @user.surveys.first.total_user_score %>
      <%= link_to results_user_path(@user),class:'stat' do %>
      <%= image_tag("stat.png") %>
      <% end %>
    <% else %>

    <% end %>
    </div>
  </div>

</div>




